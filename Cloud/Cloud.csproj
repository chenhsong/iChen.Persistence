    <Version>4.1.1.0</Version>
    <Authors />
    <Company>Chen Hsong Holdings Ltd.</Company>
    <Product>iChen Cloud Persistence</Product>
    <Description>Cloud-based data persistence layer for iChen 4.0.</Description>
    <Copyright>Copyright Â© 2016-2018 by Chen Hsong Holdings Ltd.  All rights reserved.</Copyright>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
